{% extends 'AppBundle::base.html.twig' %}
{% block body %}
<div class="register-box">
    <div class="register-box-body">
        <p class="login-box-msg">注册一个账号</p>
        <form action="{{ path('register') }}" method="post" id="register-check">
            <div class="form-group has-feedback">
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
                <input type="text" class="form-control" id="register-name" placeholder="用户名" name="username" value="">
            </div>
            <div class="form-group has-feedback">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                <input type="password" class="form-control" placeholder="密码" name="password" value="">
            </div>
            {{ form_csrf_token() }}
            <div class="row">
                <div class="col-xs-12">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">注册</button>
                </div>
            </div>
        </form>
        <a href="{{ path('login') }}" class="text-center">已有账号</a>
    </div>
</div>
{% endblock %}
