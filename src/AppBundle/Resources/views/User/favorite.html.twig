{% extends 'AppBundle:User:index.html.twig' %}

{% block base_content %}
    <div class="content">
        <div class="content-block new-content">
            {% block navTabs %}
                <ul class="nav nav-tabs">
                    <li role="newknowledge"><a href="{{path('user_page', {userId:user.id})}}">用户分享</a></li>
                    <li role="myconcern"><a href="{{path('user_follows', {userId:user.id ,type:'topic'})}}">用户关注</a></li>
                    <li role="topic" class="active"><a href="{{path('user_favorites', {userId:user.id})}}">用户收藏</a></li>
                </ul>
                <br>
            {% endblock %}
            <div class="row" id="knowledge-list">
                {% if knowledges is defined and knowledges %}
                    {% for knowledge in knowledges %}
                        {% set user = users[knowledge.userId]|default(null) %}
                        {% set knowledgeTag = knowledgeTags[knowledge.id].knowledgeTag|default(null) %}
                            {% include "AppBundle:User:others-favorite.html.twig" %}
                    {% endfor %}
                {% else %}
                    <div class="panel-title"><h4 align="center">---暂无记录---</h4></div>
                {% endif %}
            </div>
            </div>
              {{ web_macro.paginator(paginator) }}
            </div>
        </div>
    </div>
{% endblock %}